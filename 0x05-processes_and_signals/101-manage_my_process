#!/usr/bin/env bash
#This script stops 7 - highlander.

#!/bin/bash

SCRIPT_PATH="manage_my_process"
PID_FILE="/var/run/my_process.pid"

case "$1" in
  start)
    if [ -f "$PID_FILE" ]; then
      echo "Error: Process is already running with PID $(cat "$PID_FILE")"
      exit 1
    fi
    "$SCRIPT_PATH" &
    echo "$!" > "$PID_FILE"
    echo "manage_my_process started"
    ;;
  stop)
    if [ ! -f "$PID_FILE" ]; then
      echo "Error: Process is not running"
      exit 1
    fi
    pid=$(cat "$PID_FILE")
    kill "$pid"
    rm "$PID_FILE"
    echo "manage_my_process stopped"
    ;;
  restart)
    if [ -f "$PID_FILE" ]; then
      pid=$(cat "$PID_FILE")
      kill "$pid"
      rm "$PID_FILE"
    fi
    "$SCRIPT_PATH" &
    echo "$!" > "$PID_FILE"
    echo "manage_my_process restarted"
    ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
esac
